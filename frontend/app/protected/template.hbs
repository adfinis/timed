<main class="page-main relative">
  {{#if this.loading}}<span class="loader"></span>{{/if}}
  <div class="page-content--scroll px-2 py-2.5 lg:px-3.5 lg:py-4 xl:px-4 xl:py-5 h-screen overflow-auto min-h-screen flex flex-col">
    <Topnav @onLogout={{this.invalidateSession}} />
    <div class="mt-16"/>
    {{outlet}}
  </div>
</main>

<WelcomeModal
  @visible={{this.visible}}
  @onNever={{this.neverTour}}
  @onLater={{this.laterTour}}
  @onStart={{this.startTour}}
/>
