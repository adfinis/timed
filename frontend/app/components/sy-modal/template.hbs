{{#if @visible}}
    {{#in-element this.syModals insertBefore=null}}
    <SyModal::Overlay @visible={{@visible}} @onClose={{optional @onClose}}>
      <div class="modal-dialog {{if @size (concat 'modal-dialog--' @size)}}">
        {{yield
          (hash
            header=(component "sy-modal/header" close=(optional @onClose))
            body=(component "sy-modal/body" close=(optional @onClose))
            footer=(component "sy-modal/footer" close=(optional @onClose))
            close=(optional @onClose)
          )
        }}
      </div>
    </SyModal::Overlay>
  {{/in-element}}
{{/if}}
