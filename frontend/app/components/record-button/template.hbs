<button
  type="submit"
  data-class-record-button-active={{not (not this.active)}}
  data-class-record-button-start={{not this.active}}
  class="record-button-container h-full border-black btn py-2
    {{if
      this.active
      'record-button-container--recording grid grid-cols-[auto,minmax(0,1fr)] gap-x-2 place-items-center'
    }}"
    {{on "click" (prevent-default (optional (if this.active @onStop @onStart)))}}
>
  {{#if this.active}}
      <FaIcon @icon="square" @prefix="fas" class="text-danger" />
    <div class="record-button-timer">
      <DurationSince class="text-black" @from={{@activity.from}} />
    </div>
  {{else}}
      <FaIcon @icon="play" @prefix="fas" @transform="right-1" class="text-adfinis-green" />
  {{/if}}
</button>