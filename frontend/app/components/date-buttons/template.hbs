<div class="grid grid-cols-2 lg:grid-cols-3 gap-2" ...attributes>
  {{#each this.choices as |choice index|}}
    <button
      class="btn btn-default date-button px-3"
      data-test-preset-date={{index}}
      type="button"
      {{on "click" (fn this.selectDate choice)}}
    >{{choice}}</button>
  {{/each}}
</div>