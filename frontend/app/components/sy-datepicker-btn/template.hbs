<BasicDropdown @horizontalPosition="auto-right" @renderInPlace="false" as |dd|>
  <dd.Trigger class="btn btn-default">
    <FaIcon @icon="calendar" />
  </dd.Trigger>
  <dd.Content>
    <SyCalendar
      class="sy-datepicker"
      @center={{this.center}}
      @selected={{@value}}
      @onCenterChange={{this.updateCenter}}
      @onSelect={{this.updateSelection}}
    />
  </dd.Content>
</BasicDropdown>