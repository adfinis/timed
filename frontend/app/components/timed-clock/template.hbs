<svg
  class="timed-clock w-[var(--clock-size)] h-[var(--clock-size)] stroke-adfinis-black"
  viewBox="0 0 512 512"
  width="100%"
  height="100%"
  {{style --clock-size=(concat (or @clockSize 50) "px")}}
  ...attributes
>
  <circle
    class="fill-transparent"
    r="240"
    cx="256"
    cy="256"
    stroke-width="20"
  />
  <line
    x1="256"
    y1="144"
    x2="256"
    y2="288"
    stroke-width="30"
    stroke-linecap="round"
    transform="rotate({{this.hour}} 256 256)"
  />
  <line
    x1="256"
    y1="80"
    x2="256"
    y2="288"
    stroke-width="20"
    stroke-linecap="round"
    transform="rotate({{this.minute}} 256 256)"
  />
  <line
    class="stroke-adfinis-green"
    x1="256"
    y1="64"
    x2="256"
    y2="288"
    stroke-width="20"
    stroke-linecap="round"
    transform="rotate({{this.second}} 256 256)"
  />
</svg>