<Table::Th
  @light={{true}}
  class="sort-header cursor-pointer whitespace-nowrap align-bottom"
  {{on "click" this.click}}
  ...attributes
>
  {{yield}}
  {{#if this.active}}
    <FaIcon @prefix="fas" @icon="sort-{{this.direction}}" />
  {{else}}
    <FaIcon @prefix="fas" @icon="sort" />
  {{/if}}
</Table::Th>