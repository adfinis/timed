<div class="filter-sidebar-group {{if this.expanded 'expanded'}} flex flex-col group border-t p-2.5">
  <a
    href="#"
    class="filter-sidebar-group-label text-lg hover:text-foreground group-[.expanded]:text-foreground text-foreground-muted flex justify-between items-center transition-colors"
    {{on "click" (toggle "expanded" this)}}>
    {{@label}}
    <FaIcon
      @icon="angle-right"
      @prefix="fas"
      @transform="{{if this.expanded 'rotate-90'}}"
      />
    </a>
    <div class="filter-sidebar-group-body overflow-hidden group-[.expanded]:max-h-96 max-h-0 transition transition-[max-height]">
      <div class="filter-sidebar-group-content py-2">
        {{yield}}
      </div>
    </div>
  </div>