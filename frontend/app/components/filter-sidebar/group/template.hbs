<div
  class="filter-sidebar-group
    {{if this.expanded 'expanded filter-sidebar-group--expanded'}}
    flex flex-col group border-t p-2.5"
>
  <button
    type="button"
    class="filter-sidebar-group-label text-xl hover:text-foreground group-[.expanded]:text-foreground text-foreground-muted flex justify-between items-center transition-colors"
    {{on "click" (toggle "expanded" this)}}
  >
    {{@label}}
    <FaIcon
      @icon="angle-right"
      @prefix="fas"
      @transform="{{if this.expanded 'rotate-90'}}"
    />
  </button>
  <div
    class="filter-sidebar-group-body overflow-hidden group-[.expanded]:max-h-96 max-h-0 transition transition-[max-height]"
  >
    <div class="filter-sidebar-group-content py-2 [&>*]:mt-1">
      {{yield}}
    </div>
  </div>
</div>