<div
  class="{{if @option.archived 'inactive'}} px-1"
  title="{{if @option.isTask @option.longName @option.name}}{{if
    @option.archived
    ' (archived)'
  }}"
>
  {{#if @option.isTask}}
    <span class="history">
      <span class="history-text inline-flex flex-col">
        <small class="text-xs">{{@option.project.customer.name}}
          >
          {{@option.project.name}}</small>
        {{@option.name}}
      </span>
    </span>
  {{else}}
    {{@option.name}}
  {{/if}}
  {{#if @option.archived}}
    <i class="fa fa-archive"></i>
  {{/if}}
</div>