<PowerSelect
  class="form-input [&[aria-expanded=true]]:rounded-b-none [&[aria-expanded=true]]:border-b-0 focus:border-transparent"
  @options={{@options}}
  @placeholder={{@placeholder}}
  @selected={{@selected}}
  @disabled={{@disabled}}
  @allowClear={{@allowClear}}
  @searchEnabled={{true}}
  @searchField={{@searchField}}
  @name={{@name}}
  @tagName={{@tagName}}
  @triggerClass={{@class}}
  @optionsComponent={{component "optimized-power-select/options"}}
  @triggerComponent={{component "optimized-power-select/trigger"}}
  @onChange={{@onChange}}
  @extra={{this.extra}}
  @onFocus={{this.onFocus}}
  @onKeydown={{this.onKeydown}}
/>
