<ul
  class="
    project-info__list
    uk-child-width-1-2
    uk-child-width-1-3@s
    uk-child-width-1-5@m
  "
  uk-grid
>
  <li class="project-info__item">
    <strong class="project-info__title">
      {{t "component.project-info.name"}}
    </strong>
    <span>{{@project.name}}</span>
  </li>

  <li class="project-info__item">
    <strong class="project-info__title">
      {{t "component.project-info.customer"}}
    </strong>
    <span>{{@project.customer.name}}</span>
  </li>

  <li class="project-info__item">
    <strong class="project-info__title">
      {{t "component.project-info.billing"}}
    </strong>
    <span>{{@project.billingType.name}}</span>
  </li>

  <li class="project-info__item" title={{"HH:mm"}}>
    <strong class="project-info__title">
      {{t "component.project-info.time-remaining"}}
    </strong>
    <span>{{format-duration-short @project.totalTime}}</span>
  </li>

  <li class="project-info__item" title={{"HH:mm"}}>
    <strong class="project-info__title">
      {{t "component.project-info.time-unconfirmed"}}
    </strong>
    <span>{{format-duration-short @project.unconfirmedTime}}</span>
  </li>
</ul>
